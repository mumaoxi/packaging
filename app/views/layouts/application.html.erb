<!DOCTYPE html>
<html>
<head>
  <title><%= yield :tab_title %></title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <meta id="viewport" name="viewport" content="width=device-width,minimum-scale=1,maximum-scale=1,initial-scale=1,user-scalable=no">
  <meta name="apple-mobile-web-app-capable" content="yes">
</head>
<body>

<%= form_for :null, :html => {:style => 'display:hidden', :id => 'app_form'} do %>
<% end %>

<%= yield %>

<div class="content">
  <%= yield :content %>
</div>

<!--进度条-->
<div class="mi-loading">
  <div class="icon">
    <img src="<%= asset_path('icons/icon_loading.png') %>">
  </div>
  <p class="label">
    超级打包
  </p>

  <div class="points">
    <i class="one"></i>
    <i class="two"></i>
    <i class="three"></i>
  </div>
</div>

<!--toast-->
<div class="mi-toast">
</div>

<!--confirm-->
<div class="mi-confirm">
  <div class="dialog">
    <p class="title">警告</p>

    <div class="body">
    </div>
    <div class="footer">
      <button class="cancel">取消</button>
      <button class="confirm">确定</button>
    </div>
  </div>
</div>
</div>

<%= javascript_include_tag 'application' %>
</body>
</html>
